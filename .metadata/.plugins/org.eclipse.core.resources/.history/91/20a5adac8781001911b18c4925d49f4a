output application/csv
var newpick = (data) -> data match {
    case 1 -> "Ready"
    case 2 -> "NotReady"
    else -> "OTHER"
    }

---
payload map (item, index) -> {
		"id": item.id,
		"status": newpick(item.pick),
		"name": item.name,
		"notes": item.notes,
		"last_update": item.last_update
}]]></ee:set-payload>
